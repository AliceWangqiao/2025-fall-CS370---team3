//model is the parent class to user and tool

class Model{
//put code here
}

class User extends Model{
  //this might be the private/protected/public part of the class
  int userID;
  string Username;
  string Password;
  bool role;//1 for admin, 0 for user
  string fullName;
  string email;
}

class Tool extends Model{
  int toolID;
  string type;
  int toolCondition;
  string whoHas;
  string damageReport;
  string whenBooked;
  string timeBooked;
}
